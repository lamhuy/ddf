<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
		   xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<bean id="suggesterIndexCollectionProvider" class="ddf.catalog.provider.solr.suggesterindexcollectionprovider.SuggesterIndexCollectionProvider">
		<cm:managed-properties persistent-id="ddf.catalog.provider.solr.suggesterindexcollectionprovider.SuggesterIndexCollectionProvider"
			update-strategy="container-managed"/>
		<property name="shardCount" value="2"/>
		<property name="suggesterMetacardTypes">
			<list value-type="java.lang.String">
				<value>gazetteer</value>
				<value>geonames</value>
			</list>
		</property>
	</bean>

	<service ref="suggesterIndexCollectionProvider" interface="ddf.catalog.source.solr.api.IndexCollectionProvider" ranking="10"/>

</blueprint>
