<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

  <OCD name="JDBC Storage Provider"
    id="ddf.catalog.provider.jdbc.JdbcStorageProvider">
    <AD description="JDBC Driver"
      name="Driver" id="driver"
      type="String" default="org.postgresql.Driver"/>

    <AD description="JDBC Connection String."
      name="DB URL" id="dbUrl"
      type="String" default="jdbc:postgresql://localhost:5432/ddf"/>

    <AD description="Username" name="Username" id="user" type="String" default="ddf"/>

    <AD description="Password" name="Password" id="password" type="Password"
      default="ddf-password"/>

    <AD description="JDBC Connection Minimum Pool size."
      name="DB Min Pool Size" id="minPoolSize"
      type="Integer" default="5"/>

    <AD description="JDBC Connection Maximum Pool size."
      name="DB Max Pool Size" id="maxPoolSize"
      type="Integer" default="100"/>

    <AD description="JDBC Idle Connection Timeout (seconds)."
      name="DB Idle Connection Time(s)" id="idleConnectionTestPeriod"
      type="Integer" default="300"/>

    <AD description="JDBC Max Statement Cache."
      name="DB Statement Cache" id="maxStatementCache"
      type="Integer" default="250"/>

  </OCD>

  <Designate pid="ddf.catalog.provider.jdbc.JdbcStorageProvider">
    <Object ocdref="ddf.catalog.provider.jdbc.JdbcStorageProvider"/>
  </Designate>

</metatype:MetaData>