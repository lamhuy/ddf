<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

  <OCD name="Solr Index Provider"
    id="ddf.catalog.provider.solr.SolrIndexProvider">
    <AD description="Enable /get handler collection alias workaround"
      name="/get handler workaround" id="getHandlerWorkaround"
      type="Boolean" default="true"/>

    <AD description="Enable collection alias threaded query workaround"
      name="Collection alias workaround" id="collectionThreadWorkaround"
      type="Boolean" default="true"/>

    <AD description="Alias to use for catalog collection. Default: catalog"
      name="Catalog Collection Alias" id="collectionAlias"
      type="String" default="catalog"/>
  </OCD>

  <Designate pid="ddf.catalog.provider.solr.SolrIndexProvider">
    <Object ocdref="ddf.catalog.provider.solr.SolrIndexProvider"/>
  </Designate>

</metatype:MetaData>