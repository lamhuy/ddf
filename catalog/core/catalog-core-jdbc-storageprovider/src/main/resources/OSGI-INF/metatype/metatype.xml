<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

    <OCD name="JDBC Storage Provider"
         id="ddf.catalog.provider.jdbc.JdbcStorageProvider">
        <AD
                description="JDBC Connection String."
                name="DB URL" id="dbUrl"
                type="String" default="jdbc:postgresql://localhost:5432/ddf"/>

        <AD
                description="JDBC Connection Pool size."
                name="DB Pool Size" id="poolSize"
                type="Integer" default="100"/>

        <AD description="Username" name="Username" id="user" type="String" default="ddf"/>

        <AD description="Password" name="Password" id="password" type="Password" default="ddf-password"/>

    </OCD>

    <Designate pid="ddf.catalog.provider.jdbc.JdbcStorageProvider">

        <Object ocdref="ddf.catalog.provider.jdbc.JdbcStorageProvider"/>
    </Designate>

</metatype:MetaData>