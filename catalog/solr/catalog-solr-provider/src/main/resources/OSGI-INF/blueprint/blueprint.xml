<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
		   xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

	<reference id="solrClientFactory" interface="org.codice.solr.factory.SolrClientFactory" />

	<reference id="filterAdapter" interface="ddf.catalog.filter.FilterAdapter"/>

	<bean id="solrCatalogProvider" class="ddf.catalog.solr.provider.SolrCatalogProvider"
          destroy-method="shutdown">
		<!-- Aries does not call my object on startup if set to component-managed. Therefore, we will use container-managed
		and have the setter call the update method. -->
        <cm:managed-properties persistent-id="ddf.catalog.solr.provider.SolrCatalogProvider"
                               update-strategy="container-managed"/>
		<argument ref="filterAdapter"/>
        <argument ref="solrClientFactory" />
		<argument>
			<bean class="ddf.catalog.source.solr.SolrFilterDelegateFactoryImpl"/>
		</argument>
	</bean>

	<service ref="solrCatalogProvider" interface="ddf.catalog.source.CatalogProvider"/>

	<bean id="solrIndexProvider" class="ddf.catalog.source.solr.SolrIndexProvider">
		<cm:managed-properties persistent-id="ddf.catalog.solr.SolrIndexProvider"
			update-strategy="container-managed"/>
		<argument ref="filterAdapter"/>
		<argument ref="solrClientFactory" />
		<argument>
			<bean class="ddf.catalog.source.solr.SolrFilterDelegateFactoryImpl"/>
		</argument>
	</bean>

	<bean id="solrStorageProvider" class="ddf.catalog.source.solr.SolrStorageProvider">
		<cm:managed-properties persistent-id="ddf.catalog.solr.SolrStorageProvider"
			update-strategy="container-managed"/>
		<argument ref="filterAdapter"/>
		<argument ref="solrClientFactory" />
		<argument>
			<bean class="ddf.catalog.source.solr.SolrFilterDelegateFactoryImpl"/>
		</argument>
	</bean>

	<service ref="solrIndexProvider" interface="ddf.catalog.source.IndexProvider" />
	<service ref="solrStorageProvider" interface="ddf.catalog.source.StorageProvider" />

	<reference id="indexProvider" interface="ddf.catalog.source.IndexProvider" />
	<reference id="storageProvider" interface="ddf.catalog.source.StorageProvider" />

	<bean id="muxCatalogProvider" class="ddf.catalog.solr.provider.MuxCatalogProvider"
		destroy-method="shutdown">
		<!-- Aries does not call my object on startup if set to component-managed. Therefore, we will use container-managed
		and have the setter call the update method. -->
		<cm:managed-properties persistent-id="ddf.catalog.solr.provider.MuxCatalogProvider"
			update-strategy="container-managed"/>
		<argument ref="indexProvider"/>
		<argument ref="storageProvider" />
	</bean>

	<service ref="muxCatalogProvider" interface="ddf.catalog.source.CatalogProvider"/>

</blueprint>
